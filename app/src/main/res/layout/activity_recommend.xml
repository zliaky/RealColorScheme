<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:layout_gravity="center_horizontal">

    <ImageView android:id="@+id/recImg"
               android:layout_width="fill_parent"
               android:layout_height="340dp"
               android:layout_gravity="top|center_horizontal"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="#393939"
              android:text="Recommend Color Scheme"/>

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="80dp">

        <Button android:id="@+id/recBtn0"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        <Button android:id="@+id/recBtn1"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        <Button android:id="@+id/recBtn2"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        <Button android:id="@+id/recBtn3"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        <Button android:id="@+id/recBtn4"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        <Button android:id="@+id/recBtn5"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

    </LinearLayout>
    
    <RelativeLayout android:layout_width="320dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal">

        <LinearLayout android:id="@+id/recToHomeLayout"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentTop="true">
            <Button android:id="@+id/recToHome"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/home"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="#393939"
                      android:layout_gravity="center_horizontal"
                      android:text="Home"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentBottom="true">
            <Button android:id="@+id/recARDraw"
                    android:layout_width="60dp"
                    android:background="@mipmap/ardraw"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="60dp"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="#393939"
                      android:layout_gravity="center_horizontal"
                      android:text="AR Draw"/>
        </LinearLayout>

        <GridLayout android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:background="@mipmap/border"
                    android:layout_toRightOf="@+id/recToHomeLayout"
                    android:layout_toLeftOf="@+id/recCollectLayout"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="6dp"
                    android:useDefaultMargins="true"
                    android:rowCount="2"
                    android:columnCount="2">

            <Button android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/button_shape"/>
            <Button android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/button_shape"/>
            <Button android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/button_shape"/>
            <Button android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/button_shape"/>

        </GridLayout>


        <LinearLayout android:id="@+id/recCollectLayout"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_alignParentRight="true"
                      android:layout_alignParentTop="true">

            <Button android:id="@+id/recCollect"
                    android:layout_width="60dp"
                    android:background="@mipmap/collect"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="60dp"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="#393939"
                      android:layout_gravity="center_horizontal"
                      android:text="Collect"/>
        </LinearLayout>


        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_alignParentRight="true"
                      android:layout_alignParentBottom="true">
            <Button android:id="@+id/recPrint"
                    android:layout_width="60dp"
                    android:background="@mipmap/print"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="60dp"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="#393939"
                      android:layout_gravity="center_horizontal"
                      android:text="Print"/>
        </LinearLayout>

    </RelativeLayout>
    
    
</LinearLayout>